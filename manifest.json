
{
    "manifest_version": 3,
    "name": "YouTube Video Seeker",
    "version": "1.0",
    "description": "Seek YouTube videos to a custom time.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }